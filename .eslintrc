{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "plugins": ["svelte3"],
  "extends": ["eslint:recommended", "plugin:cypress/recommended"],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "rules": {
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"]
  }
}
