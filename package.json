{
  "name": "dusk-ui-kit",
  "private": true,
  "description": "Dusk UI Kit",
  "homepage": "https://dusk-network.github.io/dusk-ui-kit/",
  "bugs": {
    "url": "https://github.com/dusk-network/issues"
  },
  "repository": "https://github.com/dusk-network/dusk-ui-kit",
  "license": "MPL-2.0",
  "author": "Kieran Hall <kieran@dusk.network>",
  "files": [],
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "format": "eslint . --ignore-pattern 'node_modules/' --ignore-pattern 'storybook-static/' --fix && prettier . --write --plugin-search-dir=. \"{,!(node_modules,storybook-static)/**/**/}*.{json,js,svelte}\"",
    "publish:ci": "lerna publish from-package --yes",
    "sb:build": "rollup -c && build-storybook",
    "storybook": "rollup -c && start-storybook -p 6006",
    "test": "jest --watchAll",
    "version:ci": "lerna version --yes --conventional-commits --create-release github --message 'chore(release): publish'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true && npx --no-install devmoji -e --lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "git update-index --again",
      "commit": "npx git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "jest-transform-svelte"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.9",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@storybook/addon-a11y": "^6.2.8",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-backgrounds": "^6.2.8",
    "@storybook/addon-docs": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-knobs": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-storysource": "^6.2.8",
    "@storybook/addon-viewport": "^6.2.8",
    "@storybook/addons": "^6.2.8",
    "@storybook/source-loader": "^6.2.8",
    "@storybook/svelte": "^6.2.8",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/svelte": "^3.0.0",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.2",
    "cz-lerna-changelog": "^2.0.3",
    "devmoji": "^2.1.13",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-transform-svelte": "^2.1.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-import": "12.0.1",
    "postcss-loader": "^4.1.0",
    "postcss-nested": "^5.0.3",
    "postcss-url": "^8.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "^2.2.8",
    "prettier-plugin-svelte": "^1.4.2",
    "react-is": "^17.0.1",
    "rollup": "^2.35.1",
    "semantic-release": "^17.3.0",
    "semantic-release-monorepo": "^7.0.3",
    "semantic-release-monorepo-hooks": "^2.9.7",
    "semantic-release-plugin-decorators": "^3.0.0",
    "storybook-addon-designs": "^5.4.5",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.31.0",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^4.6.1",
    "tailwindcss": "^2.0.2"
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "main"
    ]
  }
}
