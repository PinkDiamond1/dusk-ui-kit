{
  "name": "dusk-ui-kit",
  "private": true,
  "description": "Dusk UI Kit",
  "homepage": "https://dusk-network.github.io/dusk-ui-kit/",
  "bugs": {
    "url": "https://github.com/dusk-network/issues"
  },
  "repository": "https://github.com/dusk-network/dusk-ui-kit",
  "license": "MPL-2.0",
  "author": "Kieran Hall <kieran@dusk.network>",
  "files": [],
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "format": "eslint . --ignore-pattern 'node_modules/' --ignore-pattern 'storybook-static/' --fix && prettier . --write --plugin-search-dir=. \"{,!(node_modules,storybook-static)/**/**/}*.{json,js,svelte}\"",
    "prepare": "is-ci || husky install",
    "publish:ci": "lerna publish from-package --yes",
    "sb:build": "build-storybook",
    "stage": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "test": "jest --watchAll",
    "version:ci": "lerna version --yes --conventional-commits --create-release github --message 'chore(release): publish'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "jest-transform-svelte"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.13.9",
    "@babel/preset-env": "^7.13.8",
    "@babel/runtime": "^7.13.9",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.1",
    "@semantic-release/npm": "^7.1.1",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@storybook/addon-a11y": "^6.2.8",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-backgrounds": "^6.2.8",
    "@storybook/addon-controls": "^6.2.8",
    "@storybook/addon-docs": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "^6.2.8",
    "@storybook/addon-viewport": "^6.2.8",
    "@storybook/builder-webpack5": "^6.2.8",
    "@storybook/source-loader": "^6.2.8",
    "@storybook/svelte": "^6.2.8",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/svelte": "^3.0.3",
    "autoprefixer": "10.2.5",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.3",
    "cssnano": "^5.0.1",
    "cz-lerna-changelog": "^2.0.3",
    "devmoji": "^2.2.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "jest-transform-svelte": "^2.1.1",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-import": "^14.0.1",
    "postcss-input-range": "^4.0.0",
    "postcss-loader": "^5.2.0",
    "postcss-nested-ancestors": "^2.0.0",
    "postcss-nesting": "^7.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-url": "^10.1.3",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "^2.2.10",
    "prettier-plugin-svelte": "^2.2.0",
    "react-is": "^17.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-postcss": "^4.0.0",
    "semantic-release": "^17.4.2",
    "semantic-release-monorepo": "^7.0.4",
    "semantic-release-monorepo-hooks": "^2.9.8",
    "semantic-release-plugin-decorators": "^3.0.1",
    "storybook-addon-designs": "beta",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "svelte": "^3.37.0",
    "svelte-loader": "^3.1.1",
    "svelte-preprocess": "^4.7.2",
    "tailwindcss": "^2.1.1"
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "master"
    ]
  }
}
