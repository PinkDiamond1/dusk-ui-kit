{
  "name": "dusk-ui-kit",
  "private": true,
  "description": "Dusk UI Kit",
  "homepage": "https://dusk-network.github.io/dusk-ui-kit/",
  "bugs": {
    "url": "https://github.com/dusk-network/issues"
  },
  "repository": "https://github.com/dusk-network/dusk-ui-kit",
  "license": "MPL-2.0",
  "author": "Kieran Hall <kieran@dusk.network>",
  "type": "module",
  "files": [],
  "workspaces": [
    "packages/**",
    "meta",
    "storybook"
  ],
  "scripts": {
    "format": "eslint . --ignore-pattern 'node_modules/' --ignore-pattern 'storybook-static/' --fix && prettier . --write --plugin-search-dir=. \"{,!(node_modules,storybook-static)/**/**/}*.{json,js,svelte}\"",
    "prepare": "is-ci || husky install",
    "publish": "lerna publish from-package --yes",
    "stage": "lint-staged",
    "test": "echo \"Work in progress...\" && exit",
    "test:watch": "jest --watchAll",
    "version": "lerna version --yes --conventional-commits --create-release github --message 'chore(release): publish'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|postcss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "debug": false
        }
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "chromatic": "^5.10.0",
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "devmoji": "^2.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-packagejson": "^2.2.11",
    "prettier-plugin-svelte": "^2.3.1",
    "semantic-release": "^17.4.4",
    "semantic-release-monorepo": "^7.0.5",
    "semantic-release-monorepo-hooks": "^2.9.8",
    "semantic-release-plugin-decorators": "^3.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "svelte": "3.42.6",
    "svelte-jester": "^2.0.1",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^27.0.4"
  },
  "engines": {
    "node": "^14.16.0"
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "main"
    ]
  }
}
