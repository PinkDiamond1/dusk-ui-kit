{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/helpers/**",
    "packages/elements/**",
    "packages/atoms/*/**",
    "packages/molecules/*/**",
    "packages/organisms/*/**",
    "packages/templates/*/**",
    "packages/pages/*"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com/"
    },
    "version": {
      "allowBranch": ["master"],
      "ignoreChanges": ["/storybook-views/*", "*.stories.js", "*.md"],
      "conventionalCommits": true
    },
    "bootstrap": {
      "npmClientArgs": ["--pure-lockfile"]
    }
  }
}
